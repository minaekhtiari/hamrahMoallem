<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/art2"
    >

    <TextView
        android:id="@+id/toolbar_justtitr_text_titr"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/bg_red_bottom_shadow"
        android:padding="8dp"
        android:text="مشاوره تلفنی"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/textManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="همراه اولی عزیز در این بخش شما می توانید ، \n  به صورت مستقیم و تلفنی با مشاور صحبت کنید"
            android:textColor="@color/gray_500"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="12dp"
            android:lineSpacingExtra="15dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fragment_home_callWithConsuler_fabCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textManual"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:src="@android:drawable/ic_menu_call"
            app:fabSize="normal"
            android:backgroundTint="@color/green"
            app:borderWidth="0dp"
            />

        <TextView
            android:id="@+id/textManual2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="در صورتی که همراه اولی نیستید \n ، لطفا با خط ثابت با شماره \n 9099071611 \n تماس بگیرید"
            android:textColor="@color/green"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="32dp"
            android:lineSpacingExtra="10dp"
            android:layout_below="@+id/fragment_home_callWithConsuler_fabCall"
            android:layout_marginTop="32dp"
            />

    </LinearLayout>


</RelativeLayout>