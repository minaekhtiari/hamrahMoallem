<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_messaging_question_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    >

    <RelativeLayout
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_messaging_question_relativeBack"
        android:padding="8dp"

        >

        <TextView
            android:id="@+id/card_messaging_question_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/card_messaging_question_date"
            android:layout_alignParentTop="true"
            android:gravity="end|center"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:text="888888"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/card_messaging_question_subject"
            android:src="@drawable/subject_icon" />

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            >
            <ImageView
                android:id="@+id/card_messaging_question_image_Text"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/text_message"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/card_messaging_question_image_Audio"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/audio_message"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:text="121334"
            android:id="@+id/card_messaging_question_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_500"
            android:textSize="10sp"
            android:gravity="end"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/calendar2"
            android:tint="@color/gray_500"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginTop="8dp"
            />

        <ImageView
            android:id="@+id/card_messaging_question_image_hasAnswer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/success"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_below="@+id/relativeCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:id="@+id/relativeCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/card_messaging_question_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="end|center"
                    android:lineSpacingExtra="10dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="24dp"
                    android:paddingTop="8dp"
                    android:text="486778654666"
                    android:textColor="@color/gray_500"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>