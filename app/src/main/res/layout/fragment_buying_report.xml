<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apps.hillavas.com.hamrahdars.BuyReportActivity"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_red_bottom_shadow"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/toolbar_all_frameTitle_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="گزارشات خرید"
            />

        <RelativeLayout
            android:id="@+id/aboutUs_imageBack_relative"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/toolbar_all_imageBack"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon"
                android:tint="@color/white"
                />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buyingReport_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_toolbar"
        android:paddingTop="4dp"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>
