<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_connection_failed_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09000000">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#fafafa">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خطای اتصال با سرور"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_gravity="right"
                android:layout_marginRight="24dp"/>

            <TextView
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="اتصال به سرور انجام نشد لطفا دوباره سعی کنید.."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginLeft="24dp" />

            <Button
                android:id="@+id/dialog_connection_failed_retry"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="left"
                style="?android:attr/borderlessButtonStyle"
                android:text="تلاش مجدد"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:padding="8dp"

                />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>