<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >
        <EditText
            android:hint="نام"
            android:id="@+id/dialog_edit_personalinfo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="right"
            />
        <EditText
            android:hint="نام خانوادگی"
            android:id="@+id/dialog_edit_personalinfo_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_below="@+id/dialog_edit_personalinfo_name"
            />
        <LinearLayout
            android:id="@+id/linearSex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/dialog_edit_personalinfo_family"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"

                >
                <LinearLayout
                    android:id="@+id/dialog_edit_personalinfo_linear_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/dialog_edit_personalinfo_image_male"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/male_gray"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/dialog_edit_personalinfo_text_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/man"
                        android:textSize="9sp"
                        android:textColor="@color/gray"
                        />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/dialog_edit_personalinfo_linear_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"

                    >
                    <ImageView
                        android:id="@+id/dialog_edit_personalinfo_image_female"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/female_red"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/dialog_edit_personalinfo_text_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/woman"
                        android:textSize="9sp"
                        android:textColor="@color/red"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/linearSex"
            android:layout_marginTop="8dp"
            />
        <ImageView
            android:id="@+id/dialog_edit_image_accept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/success"
            android:layout_below="@+id/textLine"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            />
        <ImageView
            android:id="@+id/dialog_edit_image_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/error"
            android:layout_below="@+id/textLine"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>